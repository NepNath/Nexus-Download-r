{
    "manifest_version": 3,
    "name": "Nexus Download'r",
    "version": "1.0",
    "description": "Télécharge des vidéos et de l'audio à partir de YouTube.",
    "permissions": ["activeTab"],
    "action": {
      "default_popup": "index.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "icons": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
  