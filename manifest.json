{
  "manifest_version": 3,
  "name": "YouTube Video Downloader",
  "version": "1.0",
  "description": "Download YouTube videos as MP3 or MP4.",
  "icons": {
      "128": "icons/128.png"
  },
  "permissions": [
      "activeTab",
      "downloads"
  ],
  "background": {
      "service_worker": "background.js"
  },
  "action": {
      "default_popup": "popup.html",
      "default_icon": {
          "128": "icons/128.png"
      }
  },
  "content_scripts": [
      {
          "matches": ["*://*.youtube.com/watch*"],
          "js":["content.js"]
      }
  ]
}
